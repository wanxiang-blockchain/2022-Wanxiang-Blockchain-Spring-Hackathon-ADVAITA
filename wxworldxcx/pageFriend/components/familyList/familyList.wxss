@import "/common/common.wxss";
.hidden-text{
	display: inline-block;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.block-box{
	width: 350rpx;
	padding: 200rpx 0;
	margin: 0 auto;
}
.block-img{
	width: 350rpx;
	height: 313rpx;
}
.block-text{
	text-align: center;
	font-size: 24rpx;
	color:#999;
	margin-top: 32rpx;
}
/* 好友列表 */
.m-mask {
	width: 100%;
	height: 100%;
	background-color: rgba(0, 0, 0, 0.3);
	position: fixed;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	margin: auto;
	z-index: 10000;
}

.m-content {
	width: 604rpx;
	height: 100%;
	background:#fff;
	border-radius: 30rpx 0 0px 0;
	position: absolute;
	right: 0;
	top: 0;
	
}
.friend-top{
	background-color: #2B86FF;
}
.friend-height{
	height: 100rpx;
	position: relative;
}
.friend-icon{
	width: 44rpx;
	height: 44rpx;
	position: absolute;
	top: 0;
	bottom: 0;
	left: 30rpx;
	margin: auto;
}
.friend-text{
	width: 64rpx;
	height: 46rpx;
	line-height: 46rpx;
	font-size: 32rpx;
	font-weight: 800;
	color: #FFFFFF;
	position: absolute;
	top: 0;
	bottom: 0;
	left: 80rpx;
	margin: auto;
}
.friend-btn{
	width: 135rpx;
	height: 46rpx;
	line-height: 46rpx;
	font-size: 24rpx;
	color: #2B86FF;
	background: #FFFFFF;
	border-radius: 30rpx;
	position: absolute;
	left: 164rpx;
	top: 0;
	bottom: 0;
	margin: auto;
}
.friend-add-icon{
	width: 32rpx;
	height: 32rpx;
	position: absolute;
	left: 20rpx;
	top: 0;
	bottom: 0;
	margin: auto;
}
.friend-text-add{
	height: 46rpx;
	line-height: 46rpx;
	display: inline-block;
	position: absolute;
	left: 58rpx;
	top: 0;
	bottom: 0;
	margin: auto;
}

.userinfo{
	position: relative;
	overflow: hidden;
}

.user-content{
	position: absolute;
	left: 130rpx;
	top: 0;
	bottom: 0;
	margin: auto;
}
.user-score{
	height: 37rpx;
	line-height: 37rpx;
	position: absolute;
	right: 32rpx;
	top: 0;
	bottom: 0;
	margin: auto;
}
.user-name{
	/* width: 420rpx; */
	vertical-align: middle;
	display: inline-block;
	margin-top: 32rpx;
	color: #6D7278;
	font-size: 28rpx;
}
.user-blue{
	vertical-align: middle;
	display: inline-block;
	height: 32rpx;
	line-height: 32rpx;
	padding: 0 10rpx;
	text-align: center;
	font-size: 20rpx;
	color: #fff;
	background-color: rgba(43, 134, 255, 1);
	border-radius: 8rpx;
	margin-left: 15rpx;
}
.user-own{
	vertical-align: middle;
	display: inline-block;
	width: 81rpx;
	height: 32rpx;
	line-height: 32rpx;
	text-align: center;
	font-size: 20rpx;
	color: #fff;
	background: linear-gradient(180deg, #FFBF31 0%, #FF8B16 100%);
	border-radius: 8rpx;
}
.orange-btn{
	width: 180rpx;
	height: 60rpx;
	line-height: 60rpx;
	text-align: center;
	color: #fff;
	font-size: 28rpx;
	background: linear-gradient(180deg, #FFBF31 0%, #FF8B16 100%);
	border-radius: 30rpx;
	position: absolute;
	top: 0;
	bottom: 0;
	right: 30rpx;
	margin: auto;
}
.border-line{
	width: 100%;
	height: 2rpx;
	background-color: #e5e5e5;
	position: absolute;
	bottom: 0;
	left: 30rpx;
}
