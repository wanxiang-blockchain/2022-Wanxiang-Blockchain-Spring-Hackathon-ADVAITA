@import "/common/iconfont.wxss";
page {
	font-size: 24rpx;
	color: #282828;
	background-color: #F8F8F8;
}

.flex-box {
	display: flex;
	flex-direction: row;
	flex-wrap: nowrap;
	justify-content: space-between;
}
/* 列表 */
.cu-list{
	background-color: #fff;
}
.cu-item {
	height: 126rpx !important;
	position: relative;
}
.cu-active{
	height: 54rpx;
	font-size: 32rpx;
	color: #52C41A;
	position: absolute;
	left: 30rpx;
	top: 0;
	bottom: 0;
	margin: auto;
}
.cu-icon{
	width: 32rpx;
	height: 32rpx;
	border:1rpx solid #D3D3D3;
	position: absolute;
	left: 30rpx;
	top: 0;
	bottom: 0;
	margin: auto;
}
.cu-avatar{
	width: 88rpx;
	height: 88rpx;
	border-radius: 50%;
	position: absolute;
	left: 100rpx;
	top: 0;
	bottom: 0;
	margin: auto;
}
.list-name {
	width: 500rpx;
	height: 42rpx;
	line-height: 42rpx;
	font-size: 30rpx;
	font-weight: 600;
	color: #6D7278;
	position: absolute;
	left: 217rpx;
	top: 0;
	bottom: 0;
	margin: auto;
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
}
.cu-border{
	width: 100%;
	height: 2rpx;
	background-color: #e5e5e5;
	position: absolute;
	bottom: 0;
	left: 217rpx;
}
.indexes {
	position: relative;
}
.user-title {
	padding: 20rpx 30rpx;
	font-weight: bold;
}
.indexBar {
	position: fixed;
	right: 0px;
	bottom: 70rpx;
	padding: 20rpx 0 20rpx 10rpx;
	display: flex;
	align-items: center;
}

.indexBar .indexBar-box {
	width: 40rpx;
	height: auto;
	/* background: #fff; */
	display: flex;
	flex-direction: column;
	/* box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1); */
	border-radius: 10rpx;
}

.indexBar-item {
	flex: 1;
	width: 40rpx;
	height: 32rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 24rpx;
	color: #888;
}


.indexToast {
	position: fixed;
	top: 0;
	right: 80rpx;
	bottom: 0;
	background: rgba(0, 0, 0, 0.5);
	width: 100rpx;
	height: 100rpx;
	border-radius: 10rpx;
	margin: auto;
	color: #fff;
	line-height: 100rpx;
	text-align: center;
	font-size: 48rpx;
}
/* 列表 */

.no-more {
	padding: 20rpx;
	color: #999;
	text-align: center;
}