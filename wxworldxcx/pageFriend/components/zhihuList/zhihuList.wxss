.aon {
	position: absolute;
	white-space: nowrap;
	animation-timing-function: linear;
	animation-fill-mode: none;
	height: 37rpx;
	font-size: 26rpx;
	font-family: PingFangSC-Semibold, PingFang SC;
	font-weight: 600;
	color: #FFFFFF;
	line-height: 37rpx;
	display: inline-block;
	/* -webkit-text-stroke: 1rpx #999999;
	text-stroke: 1rpx #999999; */
	text-shadow: #999 1rpx 0 0, #999 0 1rpx 0, #999 -1rpx 0 0, #999 0 -1rpx 0;
	left: 100%;
	
	
}

@keyframes first {
	0% {
	transform: translate3d(cal(-100%-90vw), 0, 0);
	}
	 
	
	50% {
	transform: translate3d(0, 0, 0);
	}
	 
	
	100% {
	transform: translate3d(100%, 0, 0);
	}
}

