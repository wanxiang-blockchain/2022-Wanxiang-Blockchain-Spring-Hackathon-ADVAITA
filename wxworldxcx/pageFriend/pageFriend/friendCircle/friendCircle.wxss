@import "/common/common.wxss";
page {
	font-size: 24rpx;
	color: #282828;
	background-color: #fff;
}
.flex-box {
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content: space-between;
}
/* title */
.circle-list{
	height: 84rpx;
	line-height: 84rpx;
	position: relative;
}
.search-icon{
	padding: 0 30rpx;
	position: absolute;
	left: 100rpx;
	top: -80rpx;
	transform: rotate(180deg);
}
.circle-item{
	display: inline-block;
	width: 100rpx;
	text-align: center;
	font-size: 30rpx;
	color: #999;
	position: relative;
}
.circle-active{
	color: #000;
	font-weight: bold;
}
.circle-active::after{
	content: '';
	position: absolute;
	width: 24rpx;
	height: 6rpx;
	background: #000;
	bottom: 8rpx;
	left: 0;
	right: 0;
	margin: auto;
}
.friend-icon{
	padding: 0 32rpx;
	color: #2B86FF;
	font-size: 46rpx;
	position: absolute;
	right: 0;
	bottom: 0;
	top: 0;
	margin: auto;
}
/* 搜索 */
.search-input{
	width: 312rpx;
	height: 56rpx;
	background: #F6F6F6;
	border-radius: 28rpx;
	position: absolute;
	right: 110rpx;
	top: 0;
	bottom: 0;
	margin: auto;
	transition: all 0.3s;
	overflow: hidden;
}
.input-icon{
	height: 56rpx;
	line-height: 56rpx;
	font-size: 32rpx;
	color: #999999;
	position: absolute;
	left: 26rpx;
	top: 0;
	bottom: 0;
	margin: auto;
}
/* 添加家人 */
.add-friend{
	width: 750rpx;
	height: 76rpx;
	line-height: 74rpx;
	text-align: center;
	font-size: 24rpx;
	color: #999;
	background: #F9F9F9;
}
.add-icon,.add-text{
	vertical-align: middle;
}
.add-icon{
	margin-right: 12rpx;
}
/* 添加成员弹窗 */
.add-item-mask {
	width: 550rpx;
	height: 80rpx;
	line-height: 80rpx;
	background: #031331;
	color: #fff;
	text-align: center;
	box-shadow: 0px 0px 15rpx 0px rgba(152, 152, 152, 0.15);
	border-radius: 45rpx;
	margin: 30rpx auto;
	position: relative;
}

.add-tips {
	font-size: 24rpx;
	color: #ADADAD;
	text-align: left;
	margin-left: 20rpx;
}

.share-btn {
	width: 550rpx;
	height: 80rpx;
	background-color: transparent;
	position: absolute;
	left: 0;
	top: 0;
}

.add-user-mask {
	line-height: 76rpx;
	color: #031331;
	background: transparent;
	border: 2rpx solid #031331;
}

.add-icon-mask {
	display: inline-block;
	font-size: 32rpx;
	margin-right: 18rpx;
}

.add-text-mask {
	display: inline-block;
	font-size: 28rpx;
	margin-right: 18rpx;
}

/* 授权弹窗 */
.auth-user {
	display: inline-block;
	color: #2B86FF;
	max-width: 250rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	vertical-align: middle;
}

.auth-title {
	vertical-align: middle;
	font-size: 36rpx;
	font-weight: bold;
	color: #031331;
	line-height: 50rpx;
}

.auth-content {
	font-size: 28rpx;
	color: #282828;
	line-height: 47rpx;
	letter-spacing: 1rpx;
}
/* 发朋友圈 */
.add-circle-bg{
	width: 48rpx;
	height: 48rpx;
	background: #000;
	border-radius: 50%;
	position: absolute;
	right: 30rpx;
	top: 0;
	bottom: 0;
	margin: auto;
	color: #fff;
}
.add-circle-icon{
	width: 32rpx;
	height: 48rpx;
	line-height: 48rpx;
	font-size: 32rpx;
	position: absolute;
	left: 0;
	right: 0;
	bottom: 0;
	top: 0;
	margin: auto;
}


/* 文章列表 */
.salt-bg{
	background-color: #fff;
	margin-bottom: 20rpx;
}
.salt-title-box{
	width: 750rpx;
	padding: 0 26rpx;
	background: #FFFFFF;
}
.salt-title{
	font-size: 32rpx;
	font-weight: bold;
	color: #000000;
	line-height: 44rpx;
	padding: 20rpx 0 12rpx;
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
}
.salt-content-off{
	height: 120rpx;
	font-size: 28rpx;
	color: #444444;
	line-height: 40rpx;
	margin-bottom: 14rpx;
	display: -webkit-box;
	overflow: hidden;
	text-overflow: ellipsis;
	word-wrap: break-word;
	white-space: normal !important;
	-webkit-line-clamp: 3;
	-webkit-box-orient: vertical;
}



/* 搜索 */
.search-bg{
	/* height: 150rpx; */
	padding: 0 30rpx;
	background-color: #fff;
	position: relative;
}
.search-input-input{
	width: 440rpx;
	height: 56rpx;
	line-height: 56rpx;
	margin-left: 90rpx;
}
.salt-cancel{
	height: 40rpx;
	font-size: 28rpx;
	font-weight: 500;
	color: #646464;
	line-height: 40rpx;
	position: absolute;
	right: 22rpx;
	top: 0;
	bottom: 0;
	margin: auto;
}
/* 搜索历史 */
.history-box{
	padding: 0 30rpx 0 0;
	margin-bottom: 12rpx;
}
.history-item{
	width: 300rpx;
	height: 34rpx;
	font-size: 24rpx;
	font-weight: 500;
	color: #444444;
	line-height: 34rpx;
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
}
/* 话题 */
.salt-tips{
	font-size: 28rpx;
	font-weight: bold;
	color: #000000;
	line-height: 40rpx;
	padding: 27rpx 0 8rpx;
}
.del-icon{
	padding: 0 30rpx;
	font-size: 30rpx;
	position: absolute;
	right: -30rpx;
	top: 27rpx;
}
.question-box{
	margin-top: 8rpx;
	margin-bottom: 12rpx;
}
.salt-item{
	width: 212rpx;
	height: 56rpx;
	line-height: 56rpx;
	text-align: center;
	font-size: 26rpx;
	color: #4F5386;
	background: #F5F5F5;
	border-radius: 31rpx;
	margin-bottom: 18rpx;
}
.salt-item-active{
	color: #fff;
	background: #333E6F;
}
.salt-help{
	height: 36rpx;
	text-align: center;
	font-size: 26rpx;
	font-weight: 500;
	color: #657489;
	line-height: 36rpx;
	margin-top: 10rpx;
}
.help-show{
	width: 112rpx;
	height: 46rpx;
	line-height: 46rpx;
	text-align: center;
	font-size: 24rpx;
	background: #C4C4C4;
	color: #fff;
	border-radius: 23rpx;
	margin: 30rpx auto 34rpx;
}
.help-back{
	font-size: 22rpx;
	display: inline-block;
	vertical-align: middle;
	margin-left: 4rpx;
	transform: rotate(90deg);
}