@import "/common/common.wxss";
page {
	font-size: 24rpx;
	color: #282828;
	background-color: #fff;
}
.scroll-content{
	border-top: 1rpx solid #e5e5e5;
}

.no-more {
	font-size: 28rpx;
	color: #666;
	text-align: center;
	margin-top: 30rpx;
}
.header {
	width: 100%;
	position: fixed;
	top: 0;
	left: 0;
	z-index: 99;
	background-color: #2B86FF;
}

.header-text {
	text-align: center;
	position: absolute;
	bottom: 0;
	left: 0;
	right: 0;
	margin: auto;
	font-weight: bold;
	font-size: 30rpx;
	color: #fff;
}
.header-icon{
	width: 32rpx;
	height: 32rpx;
	padding: 0 30rpx;
	transform: rotateZ(180deg);
	position: absolute;
	bottom: 0;
	left: 0;
	top: 0;
	margin: auto;
}
/* login */
.login_btn{
	width: 251rpx;
	height: 75rpx;
	line-height: 75rpx;
	text-align: center;
	color: #fff;
	background: linear-gradient(180deg, rgba(86, 187, 255, 1) 0%, rgba(43, 134, 255, 1) 100%);
	border-radius: 50rpx;
	margin: 30rpx auto;
}
/* 蓝色按钮 */
.btn-gra {
	width: 251rpx;
	height: 75rpx;
	line-height: 75rpx;
	color: #fff;
	background: linear-gradient(180deg, rgba(86, 187, 255, 1) 0%, rgba(43, 134, 255, 1) 100%);
	border-radius: 50rpx;
}

.btn-all {
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	font-size: 26rpx;
	border-radius: 10rpx;
	margin: auto;
	margin-top: 30rpx;
}

/* 粉丝数量 */
.data {
	height: 90rpx;
	display: flex;
	flex-direction: row;
	flex-wrap: nowrap;
	justify-content: space-between;
	margin: 55rpx auto 42rpx;
}
.data-box {
	width: 33%;
	text-align: center;
}
.data-num {
	font-size: 30rpx;
	font-weight: bold;
	color: #333;
}
.data-title {
	font-size: 26rpx;
	color: #999;
}
/* 搜索 */
.search-form {
	width: 626rpx;
	height: 66rpx;
	background: #F2F2F2;
	border-radius: 33rpx;
	margin: 30rpx auto 0;
	position: relative;
}

.search-input {
	width: 484rpx;
	font-size: 26rpx;
	color: #A6A6A6;
	text-align: left;
	position: absolute;
	right: 0;
	left: 0;
	top: 0;
	bottom: 0;
	margin: auto;
}

.search-icon {
	width: 26rpx;
	height: 38rpx;
	font-size: 26rpx;
	color: #999;
	position: absolute;
	left: 32rpx;
	top: 0;
	bottom: 0;
	margin: auto;
}
/* 成为家人 */
.admin-bg{
	position: fixed;
	left: 0;
	right: 0;
	bottom: 0;
	top: 0;
	margin: auto;
	z-index: 9;
}
.admin-list{
	width: 172rpx;
	text-align: center;
	color: #666;
	background: #FFFFFF;
	box-shadow: 0px 0px 20rpx 0px rgba(0, 0, 0, 0.15);
	border-radius: 6rpx;
	position: absolute;
	right: 14rpx;
	top: 151rpx;
	z-index: 9;
}
.admin-list::after{
	content: '';
	width: 0;
	height: 0;
	border-left: 8rpx solid transparent;
	border-right: 8rpx solid transparent;
	border-bottom: 10rpx solid #fff;
	position: absolute;
	top: -10rpx;
	right: 0;
	left: 0;
	margin: auto;
}
.admin-item{
	height: 67rpx;
	line-height: 67rpx;
	padding-right: 20rpx;
	font-size: 24rpx;
	text-align: right;
	border-bottom: 1rpx solid rgba(255,255,255,0.63);
}
.admin-item:last-child {
	border-bottom: none;
}
/* 健康圈 */
.group{
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
	line-height: 40rpx;
	margin: 50rpx 0 24rpx 30rpx;
}
