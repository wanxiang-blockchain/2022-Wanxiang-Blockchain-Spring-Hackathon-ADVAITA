page{
    color: #3E3A39;
}

#myMap{
	width: 100%;
}

.info-box{
	width: 100%;
	height: 382rpx;
	padding: 32rpx 32rpx 0 32rpx;
	position: relative;
}
.share-box{
	color: #333;
	background-color: #fff;
	padding-bottom: 8rpx;
	text-align: center;
	font-size: 24rpx;
	position: absolute;
	right: 12rpx;
	top:0;
	z-index: 9999;
}
.share-code{
	width: 150rpx;
	height: 150rpx;
}
.info-title{
	width: 350rpx;
	height: 70rpx;
	font-size: 50rpx;
	font-family: PingFang-SC-Bold, PingFang-SC;
	font-weight: bold;
	color: #2B86FF;
	line-height: 70rpx;
	margin-bottom: 28rpx;
	position: relative;
}
.info-tips{
	height: 40rpx;
	font-size: 28rpx;
	font-family: PingFang-SC-Bold, PingFang-SC;
	font-weight: bold;
	color: #333333;
	line-height: 40rpx;
	margin-bottom: 32rpx;
}
.info-num{
	height: 50rpx;
	font-size: 36rpx;
	font-family: PingFang-SC-Heavy, PingFang-SC;
	font-weight: 800;
	color: #2B86FF;
	line-height: 50rpx;
/* 	transition: all 0.6s;
	 transform: scale(1.2); */
	 display: inline-block;
}
.img-box{
	padding: 0 18rpx;
	position: relative;
}
.img-show{
	height:68rpx;
	width: 600rpx;
	overflow: hidden;
	position: relative;
}
.img-item{
	display: inline-block;
	width: 68rpx;
	height: 68rpx;
	border-radius: 50%;
	position: absolute;
	left: 0;
	top: 0;
	/* margin-left: -18rpx; */
	/* float: right; */
	/* transition: all 1s; */
	transition: left 0.3s linear;
}
.img-item-all{
	width: 68rpx;
	height: 68rpx;
	border-radius: 50%;
	margin-left: -18rpx;
}

.time-more{
	width: 44rpx;
	height: 30rpx;
	font-size: 22rpx;
	font-family: PingFangSC-Regular, PingFang SC;
	font-weight: 400;
	color: #999999;
	line-height: 30rpx;
	position: absolute;
	right: 0;
	top: 0;
	bottom: 0;
	margin: auto;
}
.time-box{
	width: 500rpx;
	height: 134rpx;
	text-align: right;
	position: absolute;
	top: 50rpx;
	right: 32rpx;
}
.time-state{
	width: 100%;
	height: 40rpx;
	font-size: 28rpx;
	font-family: PingFangSC-Regular, PingFang SC;
	font-weight: 400;
	color: #FF3F32;
	line-height: 40rpx;
	margin-bottom: 4rpx;
}
.time-sign{
	width: 130rpx;
	height: 60rpx;
	line-height: 60rpx;
	font-size: 26rpx;
	text-align: center;
	color: #fff;
	background: #FF9E20;
	border-radius: 29rpx;
	position: absolute;
	right: 0;
	bottom: 0;
}
.sign-done{
	background: #999;
}
.time-begin{
	width: 100%;
	height: 37rpx;
	font-size: 26rpx;
	font-family: PingFangSC-Regular, PingFang SC;
	font-weight: 400;
	color: #333333;
	line-height: 37rpx;
	margin-top: 6rpx;
}
.time-blue{
	color: #2B86FF;
}
.time-grey{
	color: #666;
}