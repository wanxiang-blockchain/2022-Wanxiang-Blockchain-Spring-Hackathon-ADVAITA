/* pagesTest/live/live.wxss */

.content {
  width: 100%;
  height:100%;
  position: relative;
}
.replay-icon{
  font-size: 60rpx;
  position: absolute;
  left: 30rpx;
  top: 30rpx;
  color: #fff;
  z-index: 2;
}
.videoCover{
  width: 750rpx;
  height:100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 2;
}
#myVideo{
  width: 750rpx;
  height:100%;
}

/* 相关视频 */
.live-title{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  padding: 39rpx 0 30rpx 0;
}
.title-li{
  height: 40rpx;
  line-height: 40rpx;
  font-size:30rpx;
  font-weight:bold;
  color:rgba(40,40,40,1);
  border-left: 1rpx solid #b4b1b4;
  padding:0 20rpx;
}
.title-li:first-child{
  border: none;
  padding-left: 0;
}
.live-title .active{
  color:rgba(255,121,13,1);
}
.live-list{
  display: flex; 
  display: -webkit-flex;        
flex-wrap: wrap;       
justify-content:space-between;
}
.list-item{
  width:330rpx;
  height:300rpx;
  position: relative;
  background:rgba(255,255,255,1);
  border-radius:15rpx 15rpx 0px 0px ;
  margin-bottom: 30rpx;
}
.img-box{
  width:330rpx;
  height:220rpx;
  position: relative;
}
.room-img{
  width:330rpx;
  height:220rpx;
  border-radius:15rpx 15rpx 0px 0px ;
}
.room{
  width:330rpx;
  height:40rpx;
  background:rgba(0,0,0,0.3);
  position: absolute;
  bottom: 0;
  left: 0;
  font-size: 0;
}
.room-name{
  width: 190rpx;
  display: inline-block;
  font-size:20rpx;
  color:rgba(255,255,255,1);
  line-height: 40rpx;
  vertical-align: top;
  margin-left: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.room-icon{
  display: inline-block;
  color: #FF790D;
  line-height: 40rpx;
  margin-right: 9rpx;
  float: right;
}
.room-num{
  display: inline-block;
  font-size:20rpx;
  color:rgba(255,255,255,1);
  line-height: 40rpx;
  margin-right: 20rpx;
  float: right;
  
}
.room-state{
  width:90rpx;
  height:36rpx;
  line-height: 36rpx;
  text-align: center;
  font-size:20rpx;
  color: #fff;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background:linear-gradient(0deg,rgba(255,121,13,1) 0%,rgba(255,200,53,1) 100%);
  border-radius:18rpx;
}
.state-end{
  background:rgba(0,0,0,0.3);
}
.list-title{
  font-size:26rpx;
  font-weight:bold;
  color:rgba(40,40,40,1);
  line-height:34rpx;
  margin: 6rpx 0 0 19rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 300rpx;
}
.list-time{
  font-size:20rpx;
  font-weight:bold;
  color:rgba(152,152,152,1);
  margin: -1rpx 0 0 19rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 300rpx;
}