<MyHeader titleText='非二大学' bind:back="back" backIcon="{{true}}"></MyHeader>
<scroll-view style="top: {{statusBarHeight+navHeight}}px;bottom:112rpx;width:{{windowWidth}}px;background: #fff;"
 scroll-y="true" class="scroll-h" bindscroll="bindscroll">
	<view class="content">
		<!--授权登录框-->
		<view wx:if="{{!userInfo}}" style="position: fixed;width: 100%;z-index: 999;height: calc({{windowHeight}}px - {{windowIsBang ? 40 : 16}}px - 52px - 56px);"
		 bindtap="showLogin"></view>
		<!-- {{item.name}}
    <navigator url="plugin-private://wx2b03c6e691cd7370/pages/live-player-plugin?room_id={{item.roomid}}">
      <image src="{{item.anchor_img}}"></image>
    </navigator>
    <button>{{item.anchor_name}}发起的直播</button>
    <subscribe room-id="1000">开播提醒</subscribe> -->
		<view class="room-box">
			<view class="room-top">
				<view class="room-img">
					<image src="{{room.cover_img}}" mode="aspectFill"></image>
				</view>
				<view class="room-detail">
					<view class="room-title">{{room.name}}</view>
					<view class="room-name">{{room.anchor_name}}</view>
					<text class="room-fire iconfont icon-icon-test"></text>
					<view class="room-num">{{room.click_num}}</view>
				</view>
				<!-- <view class="room-tips">
          <text class="room-add iconfont icon-jiahao1"></text>
          <text class="room-text">订阅</text>
        </view> -->
				<!-- <subscribe room-id="{{room.roomid}}"></subscribe> -->
			</view>
			<view class="room-time clearfix">
				<view class="time-left">直播时间</view>
				<view class="time-right">{{room.start_time + '-' + room.end_time}}</view>
			</view>
		</view>
		<view class="room-btn">
			<!-- <navigator wx:if="{{room.live_status != 103}}" url="plugin-private://wx2b03c6e691cd7370/pages/live-player-plugin?room_id={{room.roomid}}"> -->
			<view class="enter" wx:if="{{room.live_status == 101 ||room.live_status == 102}}" bindtap="goRoom" data-type="0">
				进入直播间
				<text class="room-arrow iconfont iconjiantouyou"></text>
			</view>
			<!-- </navigator> -->
			<block wx:else>
				<view wx:if="{{room.live_status == 104}}" class="repeat">禁播</view>
				<view wx:if="{{room.live_status == 105}}" class="repeat">暂停中</view>
				<view wx:if="{{room.live_status == 106}}" class="repeat">异常</view>
				<view wx:if="{{room.live_status == 107}}" class="repeat">已过期</view>
				<block  wx:if="{{room.live_status == 103}}">
					<view wx:if="{{room.replay_url.length>0 && !room.replay_url[0]}}" class="repeat">暂无回放</view>
					<view wx:else class="repeat" bindtap="goRoom" data-type="1">
						查看回放
						<text class="room-arrow iconfont iconjiantouyou"></text>
					</view>
				</block>
				
			</block>
		</view>
	</view>
</scroll-view>
<include src="/pages/common/auth.wxml" />
