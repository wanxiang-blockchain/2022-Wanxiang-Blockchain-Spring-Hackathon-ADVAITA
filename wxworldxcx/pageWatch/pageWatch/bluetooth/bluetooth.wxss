.mask{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000000;
  opacity: 0.7;
  display: block;
}
.hint{
  position: fixed;
  top: calc(50% - 65rpx);
  height: 130rpx;
  line-height: 130rpx;
  font-size: 43rpx;
  width: 90%;
  left: 5%;
  background: #FFFFFF;
  border-radius: 14rpx;
  text-align: center;
  z-index: 99999;
}
.hint image{
  width: 54rpx;
  height: 54rpx;
  vertical-align: sub;
  margin-right: 5rpx;
}

input{
  background: #F0F0F0;
  height: 80rpx;
  border-radius: 14rpx;
  line-height: 80rpx;
  padding:0 27rpx;
}
.title{
  padding-top: 30rpx;
  font-size: 43rpx;
  text-align: left;
}
.tag{
  margin-top: 33rpx;
  display: inline-flex;
  margin-bottom: 16rpx;
}
.tag view{
  font-size: 25rpx;
  display: inline-flex;
  text-align: center;
  border: 2rpx solid #979797;
  border-radius: 25rpx;
  padding: 7rpx 40rpx;
  margin-right: 13rpx;
}
.tag .active{
  border: 2rpx solid #2A2C48;
  color: #FFF;
  background: #2A2C48;
}
.tips{
  font-size:25rpx;
  font-weight: 400;
  margin-top: 13rpx;
}
.tips image{
  vertical-align: text-top;
  width:25rpx;
  height:25rpx;
  margin-right: 5rpx;
  margin-bottom: 67rpx;
}
.confirm{
  width:calc(100% - 84rpx);
  height: 91rpx;
  border-radius: 45rpx;
  background: #E3E3E3;
  color: #8D8D8D;
  text-align: center;
  font-size: 33rpx;
  line-height: 91rpx;
  left: 42rpx;
  position: fixed;
  bottom: 80rpx;
}
.confirm.active{
  background: #2A2C48;
  color: #fff;
}


.tag2{
  margin-top: 33rpx;
  /* display: inline-flex; */
  margin-bottom: 200rpx;
}
.tag2 view{
  font-size: 25rpx;
  display: inline-block;
  text-align: center;
  border: 2rpx solid #979797;
  border-radius: 25rpx;
  padding: 7rpx 40rpx;
  margin-right: 13rpx;
  margin-bottom: 15rpx;
  min-width: 160rpx;
}
.tag2 .active{
  border: 2rpx solid #2A2C48;
  color: #FFF;
  background: #2A2C48;
}

/* 图表 */
.life-bar{
	width: 690rpx;
	background: #FFFFFF;
	box-shadow: 0px 10rpx 30rpx 0px rgba(152, 152, 152, 0.15);
	border-radius: 10rpx;
	margin:0 auto 30rpx;
}
.echart-box{
	width: 100%;
	height: 560rpx;
	position: relative;
}

.life-echart{
	width: 100%;
	font-size: 24rpx;
	color: #39393A;
	padding: 30rpx 30rpx 0 30rpx;
}
.life-echart .left,.life-echart .right{
	font-weight: bold;
}
.life-back{
	font-size: 20rpx;
	margin-left: 10rpx;
	margin-top: 2rpx;
}


ec-canvas {
  width: 100%;
  height: 100%;
}


.wifiList{
  padding-left: 40rpx;
}
.wifiList .item{
  line-height: 1;
  padding: 29rpx 0;

  font-weight: 800;
  font-size: 29rpx;
  border-bottom: 1px solid rgba(231, 231, 231, 1);

}