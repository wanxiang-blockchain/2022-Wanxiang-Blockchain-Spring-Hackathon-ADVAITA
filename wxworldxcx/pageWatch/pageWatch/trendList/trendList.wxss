/* 图表 */

.life-bar{
	width: 690rpx;
	background: #FFFFFF;
	box-shadow: 0px 10rpx 30rpx 0px rgba(152, 152, 152, 0.15);
	border-radius: 10rpx;
	margin:0 auto 30rpx;
}
.life-bar:first-child{
	margin-top: 32rpx;
}
.life-echart{
	width: 630rpx;
	font-size: 24rpx;
	color: #39393A;
	padding: 30rpx 0;
	margin: 0 30rpx;
	border-bottom: 1rpx solid #EBEBEB;
}
.life-echart .left,.life-echart .right{
	font-weight: bold;
	display: inline-block;
	font-weight: normal;
	position: relative;
}
.life-echart .left::after{
	content: '';
	width: 20rpx;
	height: 20rpx;
	position: absolute;
	right: -30rpx;
	top: 8rpx;
	/* bottom: 0;
	margin: auto; */
}

.echart-box{
	width: 100%;
	height: 368rpx;
	position: relative;
}
.no-data{
	width: 100%;
	font-size: 28rpx;
	height: 368rpx;
	line-height: 368rpx;
	text-align: center;
	color: #666;
	background-color: #fff;
	position: absolute;
	top: 0;
	left: 0;
	z-index: 999;
}

