.hide{
	display: none;
}
.show{
	display: block;
}
ec-canvas {
  width: 100%;
  height: 100%;
}
.flex-box {
	display: flex;
	flex-direction: row;
	flex-wrap: nowrap;
	justify-content: space-between;
}

/* 心藏 */
.circle-list{
	height: 110rpx;
	line-height: 110rpx;
	padding: 0 17rpx;
	position: relative;
}
.circle-item{
	width: 33%;
	display: inline-block;
	text-align: center;
	font-size: 36rpx;
	color: #999;
	position: relative;
}
.circle-active{
	color: #333;
	font-weight: bold;
}
.circle-active::after{
	content: '';
	position: absolute;
	width: 144rpx;
	height: 6rpx;
	background: #2B86FF;
	border-radius: 3rpx;
	bottom: 14rpx;
	left: 0;
	right: 0;
	margin: auto;
}
/* 时间 */
.time-list{
	height: 64rpx;
	line-height: 64rpx;
	position: relative;
	border-radius: 8rpx;
	overflow: hidden;
	border: 1rpx solid #2B86FF;
	margin: 18rpx 35rpx 32rpx;
}
.time-item{
	width: 170rpx;
	text-align: center;
	border-right: 1rpx solid #2B86FF;
	font-size: 28rpx;
	color: #333;
	position: relative;
}
.time-item:last-child{
	border: none;
}
.time-active-no{
	border: none;
}
.time-active{
	color: #fff;
	background-color: #2B86FF;
}

