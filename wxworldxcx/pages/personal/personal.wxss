page{
	background-color: #fff;
}

#myMap{
	width: 100%;
	height: 100%;
}
.user{
	height: 136rpx;
}


/* 个人中心 */
.user-item{
	height: 100rpx;
	border-radius: 10rpx;
	position: relative;
}
.list-border{
	border-top: 10rpx solid #F9F9F9;
}
.list-title{
	height: 92rpx;
	line-height: 92rpx;
	padding-left: 44rpx;
	font-size: 28rpx;
	font-weight: bold;
	color: #000000;
}
.wechat-box{
	height: 74rpx;
	line-height: 74rpx;
	font-size: 28rpx;
	vertical-align: middle;
	position: absolute;
	right: 34rpx;
	top: 0;
	bottom: 0;
	margin: auto;
}
.wechat-icon{
	font-size: 42rpx;
	color: #88AA84;
	display: inline-block;
	vertical-align: middle;
	margin-right: 6rpx;
}