/* diy入口 */
.diy-box{
	width: 674rpx;
	height: 152rpx;
	box-shadow: 0px 10rpx 20rpx 0px rgba(0, 0, 0, 0.22);
	border-radius: 18rpx;
	overflow: hidden;
	position: relative;
	margin: 76rpx auto 38rpx; 
}
