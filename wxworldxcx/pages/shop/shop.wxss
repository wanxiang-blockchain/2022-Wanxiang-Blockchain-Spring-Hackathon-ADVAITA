page {
	font-size: 24rpx;
	color: #282828;
	background-color: #F8F8F8;
}

.flex-box {
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content: space-between;
}
.container{
	width: 678rpx;
	margin: 0 auto;
}
.more{
	width: 174rpx;
	height: 60rpx;
	line-height: 56rpx;
	text-align: center;
	font-size: 22rpx;
	border-radius: 30rpx;
	border: 2rpx solid #000000;
	margin: 36rpx auto 150rpx;
}
.more-arrow{
	font-size: 22rpx;
	margin-left: 10rpx;
}
/* login */
.login_btn{
	width: 251rpx;
	height: 75rpx;
	line-height: 75rpx;
	text-align: center;
	color: #fff;
	background: linear-gradient(180deg, rgba(86, 187, 255, 1) 0%, rgba(43, 134, 255, 1) 100%);
	border-radius: 50rpx;
	margin: 30rpx auto;
}
/* 蓝色按钮 */
.btn-gra {
	width: 251rpx;
	height: 75rpx;
	line-height: 75rpx;
	color: #fff;
	background: linear-gradient(180deg, rgba(86, 187, 255, 1) 0%, rgba(43, 134, 255, 1) 100%);
	border-radius: 50rpx;
}

.btn-all {
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	font-size: 26rpx;
	border-radius: 10rpx;
	margin: auto;
	margin-top: 30rpx;
}

