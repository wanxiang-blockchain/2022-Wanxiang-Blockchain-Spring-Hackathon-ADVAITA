/* 标题 */
.floor-name{
	height: 52rpx;
	line-height: 52rpx;
	font-size: 38rpx;
	font-weight: bold;
	color: #000000;
	margin: 84rpx 0 4rpx 36rpx;
}
/* 最新产品 */
.floor-item{
	width: 212rpx;
	height: 348rpx;
	background: #FFFFFF;
	box-shadow: 0px 14rpx 24rpx 0px rgba(0, 0, 0, 0.1);
	border-radius: 22rpx;
	margin-bottom: 22rpx;
	overflow: hidden;
	box-sizing: border-box;
	position: relative;
}
.floor-item-img{
	width: 100%;
	max-height: 228rpx;
	/* background-color: #ccc; */
}
.floor-item-title{
	width: 174rpx;
