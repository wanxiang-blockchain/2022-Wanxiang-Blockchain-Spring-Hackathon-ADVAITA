	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
}
.floor-item-price{
	height: 32rpx;
	font-size: 22rpx;
	font-weight: bold;
	color: #C8C8C8;
	line-height: 32rpx;
	margin: 6rpx 0 0 18rpx;
	text-overflow: ellipsis;
	overflow: hidden;
	white-space: nowrap;
}
.floor-item-icon{
	width:36rpx;
	height: 14rpx;
	position: absolute;
	right: 10rpx;
	top: 10rpx;
}
